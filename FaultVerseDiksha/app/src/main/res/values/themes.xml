<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FaultVerse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor" tools:targetApi="o">@color/dark_green</item>
    </style>
    <style name="Theme.FaultVerse" parent="Base.Theme.FaultVerse" />
    <style name="errorStyleToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">16sp</item>
        <item name="stColorBackground">@color/dark_green</item>
        <item name="stIconStart">@drawable/mainicon</item>
        <item name="stLength">LONG</item>
        <item name="stRadius">10dp</item>
    </style>

    <style name="Myratingbar" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlNormal">
            @color/black
        </item>

        <item name="colorControlActivated">#576F62</item>
    </style>
</resources>