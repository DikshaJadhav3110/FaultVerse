<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".phn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="502dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/prof_b"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.93">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/mainicon" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/current_address"
            android:textColor="@color/dark_green"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/phn_back"
            android:gravity="center"
            android:inputType="text"
            android:lines="3"
            android:text="Nerul"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/edit_address"
            android:textColor="@color/dark_green"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:id="@+id/editTextNumber2"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:autoSizeTextType="uniform"
            android:background="@drawable/phn_back"
            android:digits="0123456789*, qwertzuiopasdfghjklyxcvbnm, QWERTZUIOPASDFGHJKLYXCVBNM /-  "
            android:ems="10"
            android:gravity="center"
            android:inputType="textAutoComplete"
            android:lines="3"
            android:maxLength="100"
            android:maxLines="4"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="20sp"/>

        <Button
            android:onClick="address"
            android:id="@+id/phn_up"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/dark_green"
            android:text="@string/update_changes"
            android:textColor="@color/bg_color" />
    </LinearLayout>


</LinearLayout>