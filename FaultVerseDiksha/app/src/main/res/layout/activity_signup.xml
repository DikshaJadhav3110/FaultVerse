<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignupActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="174dp"
                    android:layout_height="93dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/logo" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="169dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="@string/signup"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />

                <ScrollView
                    android:layout_width="347dp"
                    android:layout_height="400dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:paddingBottom="10dp"
                            android:text="@string/first_name"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editLoginFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:digits="qwertzuiopasdfghjklyxcvbnm, QWERTZUIOPASDFGHJKLYXCVBNM  "
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_your_name"
                            android:inputType="textAutoComplete"
                            android:lines="1"
                            android:maxLength="15"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/last_name"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editLoginLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:digits="qwertzuiopasdfghjklyxcvbnm"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_your_name"
                            android:inputType="textAutoComplete"
                            android:lines="1"
                            android:maxLength="15"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/dob"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/editDob"
                                android:layout_width="255dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_dob"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="@string/date_birth"
                                android:inputType="textAutoComplete"
                                android:lines="1"
                                android:maxLength="15"
                                android:minHeight="48dp"
                                android:padding="12dp"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/imgdate"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/editDob"
                                android:background="@drawable/cal_back"
                                android:padding="10dp"
                                android:src="@drawable/baseline_calendar_month_24" />
                        </LinearLayout>


                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/address"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editAddr"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autoSizeTextType="uniform"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:digits="0123456789*, qwertzuiopasdfghjklyxcvbnm, QWERTZUIOPASDFGHJKLYXCVBNM /-  "
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_street_address"
                            android:inputType="textAutoComplete"
                            android:lines="3"
                            android:maxLength="100"
                            android:maxLines="4"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/gender"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/editGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="Enter Your Gender"
                            android:inputType="textAutoComplete"
                            android:lines="1"
                            android:maxLength="15"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/district"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editDistrict"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:digits="qwertzuiopasdfghjklyxcvbnm"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_your_district"
                            android:inputType="textAutoComplete"
                            android:lines="1"
                            android:maxLength="15"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_horizontal"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:scrollbars="vertical"
                            android:text="@string/pincode"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:verticalScrollbarPosition="defaultPosition" />

                        <EditText
                            android:id="@+id/editPincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:digits="0123456789"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_your_pincode"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="6"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/email"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editLoginMail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_your_email"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:maxLength="25"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/phone_number"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/editLoginPNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:digits="0123456789"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_your_number"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="10"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/landline_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/landline"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/editLand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:digits="0123456789"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_your_landline"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLength="8"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/broadband_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/broadband"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/editBroad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:digits="0123456789"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_your_broadband"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLength="8"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp"
                            android:visibility="gone" />

                        <CheckBox
                            android:id="@+id/ftth_check"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ftth"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/editFtth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:autofillHints=""
                            android:background="@drawable/new_back"
                            android:digits="0123456789"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="@string/enter_your_ftth"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLength="8"
                            android:minHeight="48dp"
                            android:padding="12dp"
                            android:textSize="20sp"
                            android:visibility="gone" />

                    </LinearLayout>
                </ScrollView>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minHeight="48dp"
                    android:onClick="sendLogin"
                    android:paddingTop="15dp"
                    android:text="@string/already_have_an_account_login"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/phn_up"
                    android:layout_width="155dp"
                    android:layout_height="62dp"
                    android:layout_marginBottom="4dp"
                    android:backgroundTint="#546C5E"
                    android:backgroundTintMode="src_atop"
                    android:onClick="sendOtpSignUp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:text="@string/register"
                    android:textSize="20sp"
                    app:cornerRadius="20dp"
                    app:strokeColor="@color/white"
                    app:strokeWidth="2dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>