<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@drawable/heh">

    <TextView
        android:id="@+id/txtclose"
        android:layout_width="17dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="X"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="308dp"
        android:layout_gravity="center"
        android:background="@drawable/dai_back"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/mainicon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/complaintId"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Complaint ID"
                android:textColor="@color/dark_green"
                android:textSize="15dp"
                android:textStyle="normal|bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/complaintIdt"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comp"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Landline No."
                android:textColor="@color/dark_green"
                android:textSize="15dp"
                android:textStyle="normal|bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/serviceNot"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:textSize="13dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/service"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Your Service"
                android:textColor="@color/dark_green"
                android:textSize="15dp"
                android:textStyle="normal|bold|italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/service2"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Landline"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/thanks"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="THANKS FOR USING MTNL SERVICES : )"
                android:textColor="@color/dark_green"
                android:textSize="13dp"
                android:textStyle="bold|italic" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>